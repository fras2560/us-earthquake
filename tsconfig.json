{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@Components/*": ["components/*"],
            "@Interfaces/*": ["interfaces/*"],
            "@Services/*": ["services/*"]
        },
    },
    "exclude": [
        "node_modules",
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "exclude": "/node_modules/**",
        "readme": "README.md",
      }
}